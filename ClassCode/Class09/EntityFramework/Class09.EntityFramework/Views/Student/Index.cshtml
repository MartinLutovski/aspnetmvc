@using Class09.EntityFramework.Models.Entities
@model List<Student>

<h2>All students</h2>
<hr />

<div class="container">
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>



                    <th>Date of Birth</th>
                    <th>Active course</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>



                        <td>@student.DateOfBirth.ToShortDateString()</td>
                        <td>@(student.ActiveCourse != null ? student.ActiveCourse.Name : "No active course")</td>
                    </tr>
                }
        </table>
    </div>

</div>
